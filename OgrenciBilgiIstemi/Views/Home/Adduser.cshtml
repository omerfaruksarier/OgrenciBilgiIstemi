@model OgrenciBilgiIstemi.Models.Table_KULLANICI
@{
    ViewBag.Title = "Adduser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Kullanıcı Ekle</h2>
<br />
@using (Html.BeginForm("Adduser", "Home", FormMethod.Post))
{
    <div></div>
    <div style="margin-top:15px;">
        <label>Kullanıcı Adı</label>
        @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control", @required = "required" })
    </div>
    <div style="margin-top:15px;">
        <label>Şifre</label>
        @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control", @required = "required", @type = "password" })
    </div>
    <div style="margin-top:15px;">
        <button class="btn btn-info">Kaydet</button>
    </div>
    <br />
}

@if (ViewBag.hata != null)
{
    <script>
        alert("Bu kullanıcı adı zaten var!");
    </script>
}
